<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">


    <TextView
            android:id="@+id/consumo"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="    "
            android:textSize="20dp"

            android:gravity="center_horizontal"/>


    <TextView
            android:id="@+id/proyeccion"
            android:layout_below="@id/consumo"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Proyeccion"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>


<LinearLayout
        android:id="@+id/linear"
        android:layout_below="@id/proyeccion"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp">



    <TextView
            android:id="@+id/m2"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="120dp"
            android:text="Horas por dia:"/>

    <Spinner android:id="@+id/horas"
             android:layout_width="100dp"
             android:layout_marginLeft="10dp"
             android:layout_height="wrap_content"/>


</LinearLayout>



    <LinearLayout
            android:id="@+id/linear2"
            android:layout_below="@id/linear"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="50dp">



        <TextView
                android:id="@+id/m2"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_width="120dp"
                android:text="Durante:"/>

        <Spinner android:id="@+id/dias"
                 android:layout_below="@id/linear"
                 android:layout_toRightOf="@id/dias"
                 android:layout_alignTop="@id/dias"
                 android:layout_marginLeft="10dp"
                 android:layout_width="120dp"
                 android:layout_height="wrap_content"     />



    </LinearLayout>

    <Button
            android:id="@+id/calcular"
            android:layout_below="@id/linear2"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:text="calcular"/>

    <TextView
            android:id="@+id/proyeccion_int"
            android:layout_below="@id/linear2"
            android:layout_alignTop="@id/calcular"
            android:layout_toRightOf="@id/calcular"
            android:layout_marginLeft="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="20dp"
            android:text=""/>

</RelativeLayout>